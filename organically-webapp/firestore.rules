rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles collection (user account data)
    match /users/{userId} {
      // Users can only read their own profile
      allow read: if isOwner(userId);
      
      // Users can only create/update their own profile
      allow create: if isOwner(userId)
                    && request.resource.data.id == userId
                    && request.resource.data.email is string;
      
      allow update: if isOwner(userId)
                    && request.resource.data.id == userId;
      
      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Profiles collection (content profiles - formerly workspaces)
    match /profiles/{profileId} {
      // Users can only read profiles they own
      allow read: if isAuthenticated() 
                  && resource.data.userId == request.auth.uid;
      
      // Users can only create profiles for themselves
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.name is string;
      
      // Users can only update their own profiles
      // Allow any field updates as long as they own the profile
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
      
      // Users can only delete their own profiles
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
