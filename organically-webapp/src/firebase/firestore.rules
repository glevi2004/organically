rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- USERS COLLECTION ---
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }


    // --- ORGANIZATIONS COLLECTION ---
    match /organizations/{organizationId} {
      // Allow read if user is authenticated (query will filter by userId)
      allow read: if isAuthenticated();
      
      // Create: must be authenticated and set userId to own uid
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.name is string;

      // Update: must own the document (check existing data)
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;

      // Delete: must own the document
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;

      // --- AUTOMATIONS SUBCOLLECTION ---
      match /automations/{automationId} {
        // Helper to check if user owns the parent organization
        function isOrgOwner() {
          return isAuthenticated() 
            && get(/databases/$(database)/documents/organizations/$(organizationId)).data.userId == request.auth.uid;
        }

        // Read: must own the parent organization
        allow read: if isOrgOwner();

        // Create: must own the parent organization
        allow create: if isOrgOwner();

        // Update: must own the parent organization
        allow update: if isOrgOwner();

        // Delete: must own the parent organization
        allow delete: if isOrgOwner();
      }
    }


    // --- POSTS COLLECTION ---
    match /posts/{postId} {
      // Allow read if user is authenticated (query will filter by userId)
      allow read: if isAuthenticated();

      // Create: must be authenticated and set userId to own uid
      // Cannot create a post with status "posted" (only server can set that)
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.status != 'posted';

      // Update: must own the document
      // Cannot update posts that are already "posted" (published posts are immutable)
      // Cannot manually set status to "posted" (only server can do that via Admin SDK)
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid
                    && resource.data.status != 'posted'
                    && request.resource.data.status != 'posted';

      // Delete: must own the document (allowed even for posted posts)
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
    }


    // --- IDEAS COLLECTION ---
    match /ideas/{ideaId} {
      // Allow read if user is authenticated (query will filter by userId)
      allow read: if isAuthenticated();

      // Create: must be authenticated and set userId to own uid
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;

      // Update: must own the document
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;

      // Delete: must own the document
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
