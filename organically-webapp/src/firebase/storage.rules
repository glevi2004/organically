rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Organization images
    match /organization-images/{userId}/{organizationId}/{fileName} {
      // Anyone can read organization images (public)
      allow read: if true;
      
      // Only authenticated users can write their own organization images
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // 5MB max
                   && request.resource.contentType.matches('image/.*');
      
      // Only the owner can delete their organization images
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Post media files (images and videos)
    match /post-media/{organizationId}/{postId}/{fileName} {
      // Anyone can read post media (for sharing/embedding)
      allow read: if true;
      
      // Authenticated users can upload media
      // Images: max 10MB, Videos: max 250MB
      allow write: if request.auth != null
                   && (
                     // Images up to 10MB
                     (request.resource.contentType.matches('image/.*')
                      && request.resource.size < 10 * 1024 * 1024)
                     ||
                     // Videos up to 250MB
                     (request.resource.contentType.matches('video/.*')
                      && request.resource.size < 250 * 1024 * 1024)
                   );
      
      // Authenticated users can delete media
      allow delete: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
